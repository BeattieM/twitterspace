<div class="modal-content" style="width: 30%;
    margin: 0 auto;
    margin-top: 20%;">
  <div class="modal-header" align="center">
    <img id="img_logo" src="">
  </div>
  <div id="div-forms">
    <%= form_for(User.new, as: 'session', url: verify_sessions_path) do |f| %>
      <div class="modal-body">
        <div class="field">
          <%= f.label :nickname %>:
          <%= f.text_field :nickname, autofocus: true, class: "form-control", placeholder: "Enter Nickname", required: "", autocomplete: "off"%>
          <%= f.submit value: 'Login'%>
        </div>
      </div>
    <% end %>
  </div>
</div>